---
import data from "../../data/items.json";
import "../../styles/global.css";
import BaseLayout from "../../layouts/BaseLayout.astro";

const { productos, empresa } = data;

const { slug } = Astro.params;
const producto = productos.find((p) => p.slug === slug);

if (!producto) {
  throw new Error(`Producto no encontrado: ${slug}`);
}

const productoIndex = productos.findIndex((p) => p.slug === slug);
const estaEnOferta = productoIndex >= 0 && productoIndex < 3;
const descuento = estaEnOferta ? 15 + (productoIndex * 5) : 0;
const precioOriginal = producto.precio;
const precioConDescuento = estaEnOferta ? precioOriginal * (1 - descuento / 100) : precioOriginal;
