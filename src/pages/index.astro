---
import "../styles/global.css";
import TestReact from "../components/TestReact.jsx";
import data from "../data/items.json";

const { empresa, productos } = data;
---

<!DOCTYPE html>
<html lang="es" class="overflow-x-hidden">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />

    <title>{empresa.nombre} | {empresa.slogan ?? "Suministros Industriales y Ferretería en México"}</title>
    <meta name="description" content={empresa.descripcion} />
    <meta name="author" content={empresa.nombre} />
    <meta name="keywords" content="Abastecedora Industrial, Abasa, ferretería, suministros industriales, herramientas, equipos de seguridad, México" />

    <meta property="og:title" content={`${empresa.nombre} | ${empresa.slogan ?? "Suministros Industriales y Ferretería"}`} />
    <meta property="og:description" content={empresa.descripcion} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.abasamx.com/" />
    <meta property="og:locale" content="es_MX" />
    <meta name="theme-color" content="#b91c1c" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />

    <script type="application/ld+json">
      {{
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": empresa.nombre,
        "url": "https://www.abasamx.com/",
        "logo": "https://www.abasamx.com/favicon.svg",
        "description": empresa.descripcion
      }}
    </script>
    <style>
      @keyframes scroll {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-50%);
        }
      }
      .animate-scroll {
        animation: scroll 30s linear infinite;
      }
      .animate-scroll:hover {
        animation-play-state: paused;
      }
      @keyframes fadeInUp {
        0% {
          opacity: 0;
          transform: translateY(20px) scale(0.95);
        }
        100% {
          opacity: 1;
          transform: translateY(0) scale(1);
        }
      }
    </style>
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 overflow-x-hidden">
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 w-full overflow-x-hidden">
      <div class="max-w-6xl mx-auto px-3 sm:px-4 md:px-6 lg:px-8 w-full">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="text-2xl font-sans font-bold text-gray-800 tracking-tight transition-all duration-300 hover:text-[#b91c1c]">
            ABASA
          </a>
          <nav class="hidden md:flex gap-8 items-center">
            <a href="/" class="text-gray-600 font-sans font-normal hover:text-[#b91c1c] transition-all duration-300">Inicio</a>
            <a href="#productos" class="text-gray-600 font-sans font-normal hover:text-[#b91c1c] transition-all duration-300">Productos</a>
            <a href="#contacto" class="text-gray-600 font-sans font-normal hover:text-[#b91c1c] transition-all duration-300">Contacto</a>
          </nav>
          <button class="md:hidden text-gray-600 hover:text-[#b91c1c] transition-all duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </header>

    <main class="max-w-6xl mx-auto px-3 sm:px-4 md:px-6 py-3 sm:py-4 md:py-6 w-full overflow-x-hidden">
      <section class="mb-6 sm:mb-8 md:mb-12 w-full overflow-hidden">
        <h3 class="text-lg sm:text-xl md:text-2xl font-sans font-semibold text-gray-800 mb-3 sm:mb-4 md:mb-6 tracking-tight px-1">Categorías de productos</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 md:gap-6 w-full">
          {Array.from(new Set(productos.map(p => p.categoria))).map((categoria) => {
            const productosCategoria = productos.filter(p => p.categoria === categoria);
            const precioMinimo = Math.min(...productosCategoria.map(p => p.precio));
            return (
              <a href={`#productos`} class="group bg-white rounded-lg sm:rounded-xl shadow-md hover:shadow-xl transition-all duration-300 ease-in-out overflow-hidden transform hover:scale-105 hover:-translate-y-0.5 border-2 border-gray-200 hover:border-[#b91c1c]">
                <div class="p-4 sm:p-5 md:p-6">
                  <div class="flex items-center justify-between mb-3 sm:mb-4">
                    <h4 class="text-base sm:text-lg md:text-xl font-sans font-semibold text-gray-800 group-hover:text-[#b91c1c] transition-colors duration-300">{categoria}</h4>
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-[#b91c1c] group-hover:translate-x-1 transition-transform duration-300 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                  <p class="text-xs sm:text-sm font-sans font-normal text-gray-600 mb-2 sm:mb-3">{productosCategoria.length} productos disponibles</p>
                  <p class="text-base sm:text-lg font-sans font-semibold text-[#b91c1c]">Desde ${precioMinimo.toFixed(2)}</p>
                </div>
              </a>
            );
          })}
        </div>
      </section>

      <section class="mb-6 sm:mb-8 md:mb-12 w-full overflow-hidden">
        <div class="bg-gradient-to-r from-[#b91c1c] to-[#991b1b] rounded-lg sm:rounded-xl md:rounded-2xl shadow-lg p-3 sm:p-4 md:p-6 text-white overflow-hidden w-full">
          <div class="mb-2 sm:mb-3 md:mb-4">
            <h3 class="text-lg sm:text-xl md:text-2xl font-sans font-semibold mb-1 tracking-tight">Ofertas especiales</h3>
            <p class="text-xs sm:text-sm font-sans font-normal opacity-90">Descuentos exclusivos en productos seleccionados</p>
          </div>
          
          <div class="relative w-full overflow-hidden">
            <div class="overflow-hidden rounded-lg sm:rounded-xl w-full">
              <div class="flex gap-3 sm:gap-4 animate-scroll w-max">
                {productos.slice(0, 3).map((producto, index) => {
                  const descuento = 15 + (index * 5);
                  const precioOriginal = producto.precio;
                  const precioDescuento = precioOriginal * (1 - descuento / 100);
                  return (
                    <a href={`/item/${producto.slug}`} class="flex-shrink-0 w-[140px] sm:w-[160px] md:w-[180px] lg:w-[200px] bg-white rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition-all duration-300 ease-in-out">
                      <div class="relative">
                        <div class="w-full h-28 sm:h-32 md:h-36 bg-white flex items-center justify-center overflow-hidden">
                          <img src={producto.imagen} alt={producto.nombre} class="max-w-full max-h-full object-contain transition-all duration-300 ease-in-out hover:opacity-90" />
                        </div>
                        <div class="absolute top-1 right-1 bg-[#b91c1c] text-white px-1.5 sm:px-2 py-0.5 rounded-full text-[10px] sm:text-xs font-sans font-semibold shadow-md">
                          -{descuento}%
                        </div>
                      </div>
                      <div class="p-2 sm:p-3">
                        <div class="mb-1">
                          <span class="inline-block px-1 sm:px-1.5 py-0.5 bg-red-100 text-[#b91c1c] text-[10px] sm:text-xs font-sans font-semibold rounded-full">{producto.categoria}</span>
                        </div>
                        <h4 class="text-xs sm:text-sm font-sans font-semibold text-gray-800 mb-1 line-clamp-2 tracking-tight leading-tight">{producto.nombre}</h4>
                        <div class="flex items-center gap-1 sm:gap-1.5 flex-wrap">
                          <p class="text-sm sm:text-base font-sans font-semibold text-[#b91c1c]">${precioDescuento.toFixed(2)}</p>
                          <p class="text-[10px] sm:text-xs font-sans font-normal text-gray-400 line-through">${precioOriginal.toFixed(2)}</p>
                        </div>
                      </div>
                    </a>
                  );
                })}
                {productos.slice(0, 3).map((producto, index) => {
                  const descuento = 15 + (index * 5);
                  const precioOriginal = producto.precio;
                  const precioDescuento = precioOriginal * (1 - descuento / 100);
                  return (
                    <a href={`/item/${producto.slug}`} class="flex-shrink-0 w-[140px] sm:w-[160px] md:w-[180px] lg:w-[200px] bg-white rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition-all duration-300 ease-in-out">
                      <div class="relative">
                        <div class="w-full h-28 sm:h-32 md:h-36 bg-white flex items-center justify-center overflow-hidden">
                          <img src={producto.imagen} alt={producto.nombre} class="max-w-full max-h-full object-contain transition-all duration-300 ease-in-out hover:opacity-90" />
                        </div>
                        <div class="absolute top-1 right-1 bg-[#b91c1c] text-white px-1.5 sm:px-2 py-0.5 rounded-full text-[10px] sm:text-xs font-sans font-semibold shadow-md">
                          -{descuento}%
                        </div>
                      </div>
                      <div class="p-2 sm:p-3">
                        <div class="mb-1">
                          <span class="inline-block px-1 sm:px-1.5 py-0.5 bg-red-100 text-[#b91c1c] text-[10px] sm:text-xs font-sans font-semibold rounded-full">{producto.categoria}</span>
                        </div>
                        <h4 class="text-xs sm:text-sm font-sans font-semibold text-gray-800 mb-1 line-clamp-2 tracking-tight leading-tight">{producto.nombre}</h4>
                        <div class="flex items-center gap-1 sm:gap-1.5 flex-wrap">
                          <p class="text-sm sm:text-base font-sans font-semibold text-[#b91c1c]">${precioDescuento.toFixed(2)}</p>
                          <p class="text-[10px] sm:text-xs font-sans font-normal text-gray-400 line-through">${precioOriginal.toFixed(2)}</p>
                        </div>
                      </div>
                    </a>
                  );
                })}
              </div>
            </div>
            <div class="absolute inset-y-0 left-0 w-8 sm:w-12 md:w-16 bg-gradient-to-r from-[#b91c1c] to-transparent pointer-events-none z-10"></div>
            <div class="absolute inset-y-0 right-0 w-8 sm:w-12 md:w-16 bg-gradient-to-l from-[#991b1b] to-transparent pointer-events-none z-10"></div>
          </div>
          
          <div class="mt-2 sm:mt-3 md:mt-4 text-center">
            <a href="#ofertas" class="inline-block px-3 sm:px-4 md:px-6 py-1.5 sm:py-2 text-xs sm:text-sm md:text-base bg-white text-[#b91c1c] font-sans font-semibold rounded-lg hover:bg-gray-100 transition-all duration-300 ease-in-out shadow-md hover:shadow-lg hover:-translate-y-0.5">
              Ver todas las ofertas
            </a>
          </div>
        </div>
      </section>

      <section id="ofertas" class="mb-6 sm:mb-8 md:mb-12 w-full overflow-hidden">
        <div class="flex items-center justify-between mb-3 sm:mb-4 md:mb-6 px-1">
          <h3 class="text-lg sm:text-xl md:text-2xl font-sans font-semibold text-gray-800 tracking-tight">Productos en oferta</h3>
        </div>
        <TestReact client:load productos={productos} soloOfertas={true} />
      </section>

      <section id="productos" class="mb-6 sm:mb-8 md:mb-12 w-full overflow-hidden">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2 sm:gap-3 md:gap-4 mb-3 sm:mb-4 md:mb-6 px-1">
          <h3 class="text-lg sm:text-xl md:text-2xl font-sans font-semibold text-gray-800 tracking-tight">Nuestros productos</h3>
          <div class="flex items-center gap-2 sm:gap-4 text-xs sm:text-sm font-sans font-normal text-gray-600">
            <span class="hidden sm:inline">Ordenar por:</span>
            <div class="relative">
              <select class="appearance-none border-2 border-gray-300 rounded-xl px-4 sm:px-5 py-2.5 sm:py-3 pr-11 sm:pr-12 text-xs sm:text-sm bg-gradient-to-br from-white to-gray-50 text-gray-800 font-sans font-semibold cursor-pointer shadow-md hover:shadow-lg hover:border-[#b91c1c] hover:from-white hover:to-red-50 focus:ring-4 focus:ring-red-100 focus:border-[#b91c1c] focus:shadow-xl transition-all duration-300 ease-in-out outline-none w-full sm:w-auto">
                <option class="bg-white text-gray-800">Precio: menor a mayor</option>
                <option class="bg-white text-gray-800">Precio: mayor a menor</option>
                <option class="bg-white text-gray-800">Nombre A-Z</option>
                <option class="bg-white text-gray-800">Más vendidos</option>
              </select>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 sm:pr-4 pointer-events-none">
                <div class="bg-[#b91c1c] rounded-lg p-1 sm:p-1.5">
                  <svg class="w-3 h-3 sm:w-4 sm:h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>
        <TestReact client:load productos={productos} />
      </section>

      <section class="mb-6 sm:mb-8 md:mb-12 w-full overflow-hidden">
        <h3 class="text-lg sm:text-xl md:text-2xl font-sans font-semibold text-gray-800 mb-3 sm:mb-4 md:mb-6 tracking-tight px-1">Productos más vendidos</h3>
        <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 md:gap-6 w-full">
          {productos.slice(0, 4).map((producto) => (
            <a href={`/item/${producto.slug}`} class="group bg-white rounded-lg sm:rounded-xl shadow-md hover:shadow-xl transition-all duration-300 ease-in-out overflow-hidden transform hover:scale-105 hover:-translate-y-0.5">
              <div class="w-full h-36 sm:h-40 md:h-44 lg:h-48 bg-white flex items-center justify-center overflow-hidden">
                <img src={producto.imagen} alt={producto.nombre} class="max-w-full max-h-full object-contain transition-all duration-300 ease-in-out group-hover:opacity-90" />
              </div>
              <div class="p-3 sm:p-4 md:p-5">
                <div class="mb-1.5 sm:mb-2">
                  <span class="inline-block px-1.5 sm:px-2 py-0.5 sm:py-1 bg-red-100 text-[#b91c1c] text-[10px] sm:text-xs font-sans font-semibold rounded-full">{producto.categoria}</span>
                </div>
                <h4 class="text-sm sm:text-base md:text-lg font-sans font-semibold text-gray-800 mb-1.5 sm:mb-2 group-hover:text-[#b91c1c] transition-colors duration-300 line-clamp-2 tracking-tight leading-tight">{producto.nombre}</h4>
                <p class="text-base sm:text-lg md:text-xl font-sans font-semibold text-[#b91c1c]">${producto.precio.toFixed(2)}</p>
              </div>
            </a>
          ))}
        </div>
      </section>

      <section class="mb-6 sm:mb-8 md:mb-12 w-full overflow-hidden">
        <h3 class="text-lg sm:text-xl md:text-2xl font-sans font-semibold text-gray-800 mb-3 sm:mb-4 md:mb-6 tracking-tight px-1">Información de compra</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3 sm:gap-4 md:gap-6 w-full">
          <div class="bg-white rounded-lg sm:rounded-xl shadow-md p-4 sm:p-5 md:p-6 border-2 border-gray-200">
            <div class="flex items-center mb-3 sm:mb-4">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-100 rounded-lg flex items-center justify-center mr-3 sm:mr-4 flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-[#b91c1c]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
              </div>
              <h4 class="text-sm sm:text-base md:text-lg font-sans font-semibold text-gray-800">Métodos de pago</h4>
            </div>
            <p class="text-xs sm:text-sm md:text-base font-sans font-normal text-gray-600 leading-relaxed">Aceptamos tarjetas de crédito, débito y transferencias bancarias. Pago seguro garantizado.</p>
          </div>

          <div class="bg-white rounded-lg sm:rounded-xl shadow-md p-4 sm:p-5 md:p-6 border-2 border-gray-200">
            <div class="flex items-center mb-3 sm:mb-4">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-100 rounded-lg flex items-center justify-center mr-3 sm:mr-4 flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-[#b91c1c]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                </svg>
              </div>
              <h4 class="text-sm sm:text-base md:text-lg font-sans font-semibold text-gray-800">Envío gratuito</h4>
            </div>
            <p class="text-xs sm:text-sm md:text-base font-sans font-normal text-gray-600 leading-relaxed">En compras mayores a $500. Entrega rápida en todo México. Seguimiento en tiempo real.</p>
          </div>

          <div class="bg-white rounded-lg sm:rounded-xl shadow-md p-4 sm:p-5 md:p-6 border-2 border-gray-200">
            <div class="flex items-center mb-3 sm:mb-4">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-red-100 rounded-lg flex items-center justify-center mr-3 sm:mr-4 flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-[#b91c1c]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <h4 class="text-sm sm:text-base md:text-lg font-sans font-semibold text-gray-800">Garantía incluida</h4>
            </div>
            <p class="text-xs sm:text-sm md:text-base font-sans font-normal text-gray-600 leading-relaxed">Todos nuestros productos incluyen garantía de 12 meses. Soporte técnico incluido.</p>
          </div>
        </div>
      </section>
    </main>

    <footer id="contacto" class="bg-gray-900 text-gray-300 mt-6 sm:mt-8 md:mt-16 w-full overflow-x-hidden">
      <div class="max-w-6xl mx-auto px-3 sm:px-4 md:px-6 lg:px-8 py-6 sm:py-8 md:py-12 w-full">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 sm:gap-6 md:gap-8 lg:gap-12">
          <div>
            <h3 class="text-white font-sans font-semibold text-sm sm:text-base mb-3 sm:mb-4">Soporte</h3>
            <ul class="space-y-2 sm:space-y-2.5 text-xs sm:text-sm font-sans font-normal">
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Centro de Ayuda</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Preguntas Frecuentes</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Guías de Uso</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Estado del Servicio</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-white font-sans font-semibold text-sm sm:text-base mb-3 sm:mb-4">Contacto</h3>
            <ul class="space-y-2 sm:space-y-2.5 text-xs sm:text-sm font-sans font-normal">
              <li class="break-words">
                <span class="text-gray-400">Teléfono:</span>
                <a href={`tel:${empresa.telefono}`} class="hover:text-[#b91c1c] transition-all duration-300 ml-2">{empresa.telefono}</a>
              </li>
              <li class="break-words">
                <span class="text-gray-400">Email:</span>
                <a href={`mailto:${empresa.email}`} class="hover:text-[#b91c1c] transition-all duration-300 ml-2 break-all">{empresa.email}</a>
              </li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Formulario de Contacto</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Chat en Vivo</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-white font-sans font-semibold text-sm sm:text-base mb-3 sm:mb-4">Información</h3>
            <ul class="space-y-2 sm:space-y-2.5 text-xs sm:text-sm font-sans font-normal">
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Sobre Nosotros</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Términos y Condiciones</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Política de Privacidad</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Aviso Legal</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

