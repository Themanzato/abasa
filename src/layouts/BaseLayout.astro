---
import data from "../data/items.json";

const { title = "Abasa", description = "Abastecedora Industrial - Suministros y herramientas para empresas", children } = Astro.props;
const { empresa } = data;
---

<!DOCTYPE html>
<html lang="es" class="bg-gray-50">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50">
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" class="text-2xl font-sans font-bold text-gray-800 tracking-tight transition-all duration-300 hover:text-[#b91c1c]">
            ABASA
          </a>
          <nav class="hidden md:flex gap-8 items-center">
            <a href="/" class="text-gray-600 font-sans font-normal hover:text-[#b91c1c] transition-all duration-300">Inicio</a>
            <a href="#productos" class="text-gray-600 font-sans font-normal hover:text-[#b91c1c] transition-all duration-300">Productos</a>
            <a href="#contacto" class="text-gray-600 font-sans font-normal hover:text-[#b91c1c] transition-all duration-300">Contacto</a>
          </nav>
          <button class="md:hidden text-gray-600 hover:text-[#b91c1c] transition-all duration-300">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </header>

    <main class="flex-1 w-full container mx-auto px-4 sm:px-6 py-6 sm:py-8">
      <slot />   
    </main>

    <footer class="bg-gray-900 text-gray-300 mt-16">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
          <div>
            <h3 class="text-white font-sans font-semibold text-base mb-4">Soporte</h3>
            <ul class="space-y-2.5 text-sm font-sans font-normal">
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Centro de Ayuda</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Preguntas Frecuentes</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Guías de Uso</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Estado del Servicio</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-white font-sans font-semibold text-base mb-4">Contacto</h3>
            <ul class="space-y-2.5 text-sm font-sans font-normal">
              <li>
                <span class="text-gray-400">Teléfono:</span>
                <a href={`tel:${empresa.telefono}`} class="hover:text-[#b91c1c] transition-all duration-300 ml-2">{empresa.telefono}</a>
              </li>
              <li>
                <span class="text-gray-400">Email:</span>
                <a href={`mailto:${empresa.email}`} class="hover:text-[#b91c1c] transition-all duration-300 ml-2">{empresa.email}</a>
              </li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Formulario de Contacto</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Chat en Vivo</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-white font-sans font-semibold text-base mb-4">Información</h3>
            <ul class="space-y-2.5 text-sm font-sans font-normal">
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Sobre Nosotros</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Términos y Condiciones</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Política de Privacidad</a></li>
              <li><a href="#" class="hover:text-[#b91c1c] transition-all duration-300">Aviso Legal</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
